public class Solution {
    public int lengthOfLongestSubstring(String s) {
        int[] index = new int[128]; // Assuming ASCII
        int left = 0, maxLength = 0;

        for (int right = 0; right < s.length(); right++) {
            left = Math.max(left, index[s.charAt(right)]);
            maxLength = Math.max(maxLength, right - left + 1);
            index[s.charAt(right)] = right + 1; // Store the next index
        }

        return maxLength;
    }

    public static void main(String[] args) {
        Solution solution = new Solution();
        String input = "abcimabcdi";
        System.out.println(solution.lengthOfLongestSubstring(input)); // Output: 5
    }
}

//reduces space complexity to O(1)
